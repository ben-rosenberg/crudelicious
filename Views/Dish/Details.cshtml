@model Dish

@{
    ViewData["Title"] = @Model.Name;
}

<div class="card">
    <div class="card-body">
        <h3 class="text-center">@Model.Name</h3>
        <h4 class="text-center">@Model.Chef</h4>
        <p>@Model.Description</p>
        <p><span class="font-weight-bold">Calories:</span> @Model.Calories</p>
        <p><span class="font-weight-bold">Rating:</span> @Model.Tastiness</p>
    </div>
    <div class="d-flex space_evenly">
        <form asp-controller="Dish" asp-action="Delete" asp-route-postId="@Model.DishId">
            <button class="btn btn-outline-danger btn-sm">Delete</button>
        </form>
        <a asp-controller="Dish" asp-action="Edit" asp-route-postId="@Model.DishId" class="btn btn-outline-primary btn-sm">
            Edit</a>
    </div>
</div>